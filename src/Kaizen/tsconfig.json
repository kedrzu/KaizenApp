{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "target": "es6",
    "typeRoots": [
      "./src/models",
      "./typings/custom",
      "./typings/globals",
      "./typings/@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
